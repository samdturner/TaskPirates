<div class="first-tasks-container">
  <ul>
    <li class="first-task">
      <div class="row">
        <div class="col-12 col-lg-8">
          <h3><%= voyage.sailor().escape('name') %></h3>
          <p><%= voyage.escape('task_description') %></p>
          <p><%= voyage.escape('start_date') %></p>
          <p><%= voyage.escape('end_date') %></p>
        </div>
        <div class="col-4 col-lg-4 righty">
          <a class="btn btn-primary btn-find voyage-complete-btn"
            href="#signup">
            <span>
              Voyage complete
            </span>
          </a>
        </div>
        <div class="col-4 col-lg-4 righty"
              style="float: right">
          <a class="btn btn-secondary btn-find cancel-voyage">
            Cancel voyage
          </a>
        </div>
      </div>
    </li>
  </ul>
</div>
